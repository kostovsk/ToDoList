@page
@model ToDoListApp.Pages.ListModels.CreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<form method="post">
    <div class="form-group">
        <label for="ListMode.Name">Name</label>
        <input type="text" class="form-control" asp-for="ToDoList.NAME">
        <span asp-validation-for="ToDoList.NAME"></span>
    </div>
    @if (Model.ToDoList != null)
    {
        <input asp-for="ToDoList.LIST_ID" type="hidden" />
        <div class="form-group">
            <label for="Name">Entry</label>
            <input type="text" class="form-control" asp-for="Item.ITEM">
        </div>

        <button type="submit" class="btn btn-outline-danger" asp-page-handler="removeentry">Remove Entry</button>
    }
    <div class="btn-group">
        <button type="submit" class="btn btn-outline-success" asp-page-handler="addentry">Add Entry</button>
    </div>
    <div class="btn-group">
        <button type="submit" asp-page-handler="submit" class="btn btn-outline-primary">Submit</button>
    </div>
</form>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}