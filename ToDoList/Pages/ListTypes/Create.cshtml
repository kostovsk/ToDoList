@page
@model ToDoList.Pages.ListTypes.CreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-dark">Create a To-do List</h2>
<br />
<form method="post">
    <div class="border backgroundwhite">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ListType.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="ListType.Name" class="form-control" />
            </div>
            <span asp-validation-for="ListType.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ListType.ListItems"></label>
            </div>
            <div class="col-5">
                <input asp-for="ListType.ListItems" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-success form-control" value="Add"/>
                    </div>
                    <div class="col-6">
                        <a asp-page="Index" class="btn btn-danger form-control">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{ 
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}